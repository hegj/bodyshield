<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/trans50"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView

             android:layout_marginTop="15dp"
             android:textColor="@color/black"
             android:textSize="20sp"
             android:id="@+id/tv_title"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:text="提示"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_title"
            android:id="@+id/rl_message"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_message"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/tv_message"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/ll_password"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TextInputEditText
                        style="@style/InputStyle"
                        android:hint="@string/login_please_input_name_warning"
                        android:layout_marginTop="20dp"
                        android:id="@+id/et_userName"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                    <android.support.design.widget.TextInputEditText
                        style="@style/InputStyle"
                        android:hint="@string/login_please_input_password_warning"
                        android:layout_marginTop="20dp"
                        android:id="@+id/et_userPassword"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <android.support.design.widget.TextInputEditText
                        style="@style/InputStyle"
                        android:hint="@string/login_please_input_country_code"
                        android:layout_marginTop="20dp"
                        android:id="@+id/et_userCountryCode"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputEditText
                        android:hint="@string/login_please_input_mobile_warning"
                        android:layout_marginTop="20dp"
                        android:id="@+id/et_phone"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:hint="@string/login_text_verification_code"
                            android:id="@+id/et_code"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv_send_code"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_verifycode_selector"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:text="@string/login_get_captcha"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>

            <android.support.design.widget.TextInputEditText
                android:visibility="gone"
                android:id="@+id/et_message"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:id="@+id/tv_positive"
                    android:text="@string/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@+id/tv_positive"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:id="@+id/tv_negative"
                    android:text="@string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>