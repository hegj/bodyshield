<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97D8F2"
    android:orientation="vertical"
    tools:context="com.cmax.bodysheild.activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:background="@color/navigation_bar_background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/navigation_bar_setting_width"
            android:layout_height="@dimen/navigation_bar_setting_height"
            android:background="@null"
            android:src="@mipmap/jian"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SaveText"
            android:id="@+id/saveBtn"
            android:paddingRight="10dp"
            android:textColor="@color/navigation_bar_text"
            android:background="@android:color/transparent"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/dl"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/setting_battery"
                    android:textSize="23sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/battery_level"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical|right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEF0FA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/temp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/setting_temp_unit"
                    android:textSize="23sp"
                    android:textColor="@color/white"/>

                <!--<Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchPadding="0dp"
                    android:scrollbarSize="0dp"
                    android:textOff="℃"
                    android:textOn="℉"
                    android:id="@+id/switch_unit"
                    android:typeface="monospace" />-->
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:scrollbarSize="0dp"
                    android:textOff="@string/temp_unit_1"
                    android:textOn="@string/temp_unit_2"
                    android:background="@null"
                    android:id="@+id/switch_unit"
                    android:typeface="monospace" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEF0FA"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/alarm"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/setting_alert_setting"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:layout_height="wrap_content"/>
               <!-- <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/jian2"/>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#97D8F2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/setting_high_fever"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@drawable/white_rect"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/high_fever"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:background="@null"/>
                        <TextView
                            android:id="@+id/deg_high_fever"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:text="℃"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/setting_low_fever"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@drawable/white_rect"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/low_fever"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="36"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:inputType="numberDecimal"
                            android:textSize="18sp"
                            android:background="@null"/>
                        <TextView
                            android:id="@+id/deg_low_fever"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:text="℃"/>
                    </LinearLayout>

                </LinearLayout>
               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="@string/setting_volume"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"/>

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/seekbar_progress"
                        android:thumb="@null"
                        android:id="@+id/volume"
                        android:layout_weight="1" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/setting_vibration"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"/>

                   <!-- <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn="On"
                        android:textOff="Off"
                        android:id="@+id/switch_vibration" />-->
                    <ToggleButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:scrollbarSize="0dp"
                        android:textOff="@string/vibration_off"
                        android:textOn="@string/vibration_on"
                        android:background="@null"
                        android:id="@+id/switch_vibration"
                        android:typeface="monospace" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/alarm"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_alert_interval"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/alert_interval_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                        <SeekBar
                            android:id="@+id/alert_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@null"
                            android:progress="50"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEF0FA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/alarm"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_measure_interval"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/measure_interval_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp">
                        <SeekBar
                            android:id="@+id/measure_interval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@null"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEF0FA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/setting_user_guide"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/go_user_guide"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/go"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEF0FA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/setting_Feedback"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/go_feedback"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/go"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEF0FA"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#72CAED"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/setting_about_us"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/go_about_us"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/go"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>
