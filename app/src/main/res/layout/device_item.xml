<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="44dp"
              android:background="@drawable/device_item_pressed"
              >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceState"
        android:src="@mipmap/ble"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/device_item_margin"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/deviceUser"
        android:layout_toRightOf="@id/deviceState"
        android:layout_marginStart="@dimen/device_item_margin"
        android:textColor="@color/navigation_bar_text"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceType"
        android:layout_toRightOf="@id/deviceUser"
        android:layout_marginStart="@dimen/device_item_margin"
        android:src="@mipmap/temperature"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="--.--Â°C"
        android:id="@+id/valueText"
        android:layout_toRightOf="@id/deviceType"
        android:layout_marginStart="10dp"
        android:textColor="@color/navigation_bar_text"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gotDevice"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/go"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>